/*6.c*/
#include <stdio.h>


int main()
{

    int x = 0;
    int y = 0;

    scanf("%d",&x);

    switch((x<0)-(x>0))
    {

    case (1):
     y = 0;
        printf("%d",y);
        break;

    case (0):
     y = -1;
    printf("%d",y);
    break;

    case(-1):
     y = x*2;
     break;
    }
    return 0;
}
